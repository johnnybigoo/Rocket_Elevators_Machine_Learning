

            <!-- <br> -->
			<hr class="m-0" /><!-- 1px line separator -->


			<!--Request a Form-->
			<section id="request-quote">
				<div class="container">
					<div class="heading-title heading-dotted text-center">
						<h2>Request A Quote</h2>
					</div>

					<!-- Form Header-->
					<div  id="border-rad-2" class="p-8 bg-light">
						<div id="border-rad" class="col p-6 mb-8 bg-white border">
							<!--Header text-->
							<div class="row-12 p-3 m-2">
								<h4 class="text-center">Please Select A Building Type Option</h4>
							</div><br><hr>


							<!-- Checkbox -->
							<div class="container align-items-center text-center form-check form-check-inline px-5">
								<%= form_with url:quote_path, class:"type-answer col-sm-12 m-4", local:true, method: :post do %>
									<label class="checkbox">
										<input type="radio" name="btn-radio" id="res">
										<i name="res"></i> Residential 
									</label>
									<label class="checkbox">
										<input type="radio" name="btn-radio" id="comm">
										<i></i> Commercial
									</label>
									<label class="checkbox">
										<input type="radio" name="btn-radio" id="corp">
										<i></i> Corporate
									</label>
									<label class="checkbox">
										<input type="radio" name="btn-radio" id="hyb">
										<i></i> Hybrid 
									</label>
								<% end %> 
							</div>
						</div>

						<div id="border-rad-3" class="border bg-white p-5">
							<div class="row-lg-4 p-3 mt-9">
								<div class="col-md-12">
									<%= form_with url:quote_path, id:"fields", local:true, method: :post do %>
									
										<div id="filled" class="row align-items-center">
											<div class="form-group col-sm-4 py-2 mb-2" id="numApartments">
												<label>Number of Apartments</label>
												<input type="text" id="input_apartments" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>
											
											<div class="form-group col-sm-4 py-2 mb-2" id="numFloorsHyb">
												<label>Number of Floors<span class="grey text-red"><small> (Excluding Basements)</small></span></label>
												<input type="text" id="input_floorsHyb" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numFloorsRes">
												<label>Number of Floors</label>
												<input type="text" id="input_floorsRes" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>
											
											<div class="form-group col-sm-4 py-2 mb-2" id="numBasements">
												<label>Number of Basements</label>
												<input type="text" id="input_basements" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numBusinesses">
												<label>Number of Distinct Businesses</label>
												<input type="text" id="input_businesses" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numParking">
												<label>Number of Parking Space</label>
												<input type="text" id="input_parking" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numCages">
												<label>Number of Elevator Cages Needed</label>
												<input type="text" id="input_cages" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numCompanies">
												<label>Number of Separate Tennant Companies</label>
												<input type="text" id="input_acompanies" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numOccupants">
												<label>Number of Occupants Per Floor</label>
												<input type="text" id="input_occupants" min="0" oninput="validity.valid||(value='');" class="form-control">
											</div>

											<div class="form-group col-sm-4 py-2 mb-2" id="numHours">
												<label>Number Of Hours Of Activity Per Day</label>
												<input type="text" id="input_hours" min="0" max="24" oninput="validity.valid||(value='');" class="form-control">
											</div>
										</div>

										<!-- Columns & Shafts -->
										<div class="form-group-2 col-md-12 text-center">
											<h4 class="results text-center">Number Of Columns &amp; Shafts Recommended:</h4>
											<p class="results" id="showColumns"></p>
											<p class="results" id="showElevators"></p>
											<div class="results row justify-content-md-center text-center">
												<p id="qtdElevators" class="text-blue bg-light"></p>
											</div>
											<hr>

											<label class="text-center font-weight-bold">Choose a product line to see the estimate</label>
											<br>

											<!-- radio buttons for selection of elevators-->
											<label class="radio">
											<input id="1" type="radio" name="btn-radio" value="1">
											<i></i> Standard <span class="grey text-blue"><small>($7565/elevator)</small></span>
											</label>

											<label class="radio">
											<input id="2" type="radio" name="btn-radio" value="2">
											<i></i> Premium <span class="grey text-blue"><small>($12,345/elevator)</small></span>
											</label>

											<label class="radio">
											<input id="3" type="radio" name="btn-radio" value="3">
											<i></i> Excelium <span class="grey text-blue"><small>($15,400/elevator)</small></span>
											</label>

											<br><hr>

											<!-- Show Prices -->
											<h3 class="text-center">Estimated Prices:</h3>
											<div id="estimated" class="row justify-content-md-center text-center">
												<div class="col-sm-4">
												<p id="showPrices" class="text-blue bg-light"></p>
												</div>
												<div class="col-sm-4">
												<p id="showFees" class="text-blue bg-light" ></p>
												</div>
												<div class="col-sm-4">
												<p id="showTotal" class="text-blue bg-light font-weight-bold"></p>
												</div>
											</div>
											<br><hr>
                      <div class="container align-items-center text-right form-check-inline px-5">
                        <div class="col-sm-6" id="reset">
                          <button type="button" class="btn btn-secondary">Clear</button>
                        </div>
                        <div>
                          <%= submit_tag "Submit", id:"submit", class:"btn btn-primary" %>
                        </div>
                      </div>
										</div>

									<% end %>
								</div><br><hr>
							</div>

						</div>
					</div>
				</div>
			</section>
			<!-- Form Fields -->